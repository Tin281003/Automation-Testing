{
  "testCaseInfo": {
    "name": "Selenium RC Script - Search and Partial Refund",
    "description": "Tìm kiếm đơn hàng 'abc', truy cập chi tiết/thao tác cho Robert's Store, và thực hiện hoàn tiền một phần (10000).",
    "baseUrl": "https://nest.botble.com"
  },
  "steps": [
    {
      "step": 1,
      "description": "Mở trình duyệt (WebUI)",
      "action": "openBrowser",
      "target": "https://www.google.com/",
      "value": null
    },
    {
      "step": 2,
      "description": "Khởi tạo Selenium và điều hướng đến trang Orders",
      "action": "open",
      "target": "https://nest.botble.com/admin/ecommerce/orders",
      "value": null
    },
    {
      "step": 3,
      "description": "Click vào ô tìm kiếm",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "//input[@type='search']"
      },
      "value": null
    },
    {
      "step": 4,
      "description": "Nhập từ khóa 'abc' vào ô tìm kiếm",
      "action": "type",
      "target": {
        "strategy": "xpath",
        "selector": "//input[@type='search']"
      },
      "value": "abc"
    },
    {
      "step": 5,
      "description": "Click icon đơn hàng 'Robert's Store' (mở chi tiết hoặc thao tác)",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "(.//*[normalize-space(text()) and normalize-space(.)=\"Robert's Store\"])[1]/following::*[name()='svg'][1]"
      },
      "value": null
    },
    {
      "step": 6,
      "description": "Click nút Refund Option (Nút Hoàn tiền)",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "//div[@id='main-order-content']/div/div/div/div[3]/div[2]/div[2]/button"
      },
      "value": null
    },
    {
      "step": 7,
      "description": "Click vào trường 'Refund Amount'",
      "action": "click",
      "target": {
        "strategy": "name",
        "selector": "refund_amount"
      },
      "value": null
    },
    {
      "step": 8,
      "description": "Click lại vào trường 'Refund Amount'",
      "action": "click",
      "target": {
        "strategy": "name",
        "selector": "refund_amount"
      },
      "value": null
    },
    {
      "step": 9,
      "description": "Nhập số tiền hoàn ('10000')",
      "action": "type",
      "target": {
        "strategy": "xpath",
        "selector": "//input[@type='refund_amount']"
      },
      "value": "10000"
    },
    {
      "step": 10,
      "description": "Xác nhận Refund",
      "action": "click",
      "target": {
        "strategy": "id",
        "selector": "confirm-refund-payment-button"
      },
      "value": null
    },
    {
      "step": 11,
      "description": "Click vào một phần tử div trong modal hoàn tiền (sau khi xác nhận)",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "//div[@id='confirm-refund-modal']/div/div/div[2]/form/div[3]"
      },
      "value": null
    }
  ]
}