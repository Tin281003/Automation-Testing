{
  "testCaseInfo": {
    "name": "Selenium RC Script - Initiating Order Refund",
    "description": "Truy cập Orders, click vào đơn hàng Global Store, và bắt đầu quy trình hoàn tiền.",
    "baseUrl": "https://nest.botble.com"
  },
  "steps": [
    {
      "step": 1,
      "description": "Mở trình duyệt (WebUI)",
      "action": "openBrowser",
      "target": "https://www.google.com/",
      "value": null
    },
    {
      "step": 2,
      "description": "Khởi tạo Selenium và điều hướng đến trang Orders",
      "action": "open",
      "target": "https://nest.botble.com/admin/ecommerce/orders",
      "value": null
    },
    {
      "step": 3,
      "description": "Click icon đơn hàng 'Global Store' (dùng index 3)",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "(.//*[normalize-space(text()) and normalize-space(.)='Global Store'])[3]/following::*[name()='svg'][1]"
      },
      "value": null
    },
    {
      "step": 4,
      "description": "Click nút Refund Option (Nút Hoàn tiền)",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "//div[@id='main-order-content']/div/div/div/div[3]/div[2]/div[2]/button"
      },
      "value": null
    },
    {
      "step": 5,
      "description": "Click vào trường 'Refund Amount' (dùng name)",
      "action": "click",
      "target": {
        "strategy": "name",
        "selector": "refund_amount"
      },
      "value": null
    },
    {
      "step": 6,
      "description": "Click vào một phần tử div trong modal hoàn tiền",
      "action": "click",
      "target": {
        "strategy": "xpath",
        "selector": "//div[@id='confirm-refund-modal']/div/div/div[2]/form/div[3]"
      },
      "value": null
    },
    {
      "step": 7,
      "description": "Xác nhận Refund",
      "action": "click",
      "target": {
        "strategy": "id",
        "selector": "confirm-refund-payment-button"
      },
      "value": null
    }
  ]
}